<?xml version="1.0" encoding="utf-8"?>
<config>
    <tabs>
        <genmato>
            <label>Genmato</label>
            <sort_order>300</sort_order>
        </genmato>
    </tabs>
    <sections>
        <genmato_core>
            <label>Extension Logging</label>
            <tab>genmato</tab>
            <frontend_type>text</frontend_type>
            <sort_order>99999</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <genmato_core>
                    <label>Genmato Core</label>
                    <frontend_type>text</frontend_type>
                    <frontend_model>genmato_core/system_config_form_fieldset_extensions</frontend_model>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                </genmato_core>
                <logging>
                    <label>Logging</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>99999999</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <show translate="label comment">
                            <label>View Logging</label>
                            <frontend_type>button</frontend_type>
                            <frontend_model>genmato_core/system_config_logging_view</frontend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </show>
                        <clean_period>
                            <label>Clean Period</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </clean_period>
                    </fields>
                </logging>
            </groups>
        </genmato_core>
    </sections>
</config>